#include<iostream>
#include<conio.h>

using namespace std;
int main()
{
	/*Create a program that will accept three numbers as inputand display the LARGEST number
		of the three.See the sample output below :
	Enter first number : 12
		Enter second number : 36
		Enter third number : 24
		The LARGEST of the three numbers is 36*/
	int a, b,c;
	cout << "Enter first number : ";
	cin >> a;
	cout << "Enter second number : ";
	cin >> b;
	cout << "Enter third number : ";
	cin >> c;

	if (a > b && a > c)
		cout << "The LARGEST of the three numbers is " << a << endl;
	else if (b > a && b > c)
		cout << "The LARGEST of the three numbers is " << b << endl;
	else
		cout << "The LARGEST of the three numbers is " << c << endl;


	_getch();
	return 0;
}
