#include<iostream>
#include<conio.h>
using namespace std;
int main()
{

	int g;
	float use, total, late, unpaid ;
	cout << "Gallons of water consumed: ";
	cin >> g;
	cout << "Unpaid Balance: Php ";
	cin >> unpaid;

	use = 1.1;
	total = 35 + (use * g);
	late = unpaid+total + 20;

	if (unpaid>0)
		cout << "Your water bill is Php " << late <<", including a P20 late charge."<< endl;
	else 
		cout << "Your water bill is Php " << total << "." << endl;
	

	_getch();
	return 0;
}
