#include<iostream>
#include<conio.h>
using namespace std;
int main()
{

	int g1,g2,g;
	float use, total, late, paid, unpaid ;
	cout << "Current meter reading in gallons: ";
	cin >> g1;
	cout << "Previous meter reading in gallons: ";
	cin >> g2;
	cout << "Amount Paid: Php ";
	cin >> paid;

	use = 1.1;
	g = g1 - g2;
	total = 35 + (use * g);
	unpaid = total - paid;
	late = unpaid + 20;

	if (paid < total)
		cout << "Your water bill is Php " << total << ". "<<endl<<"You still need to pay Php "<<late<<" which includes a Php20 late charge." << endl;
	else 
		cout << "Your water bill is Php " << total << "." << endl;
	

	_getch();
	return 0;
}
