#include<iostream>
#include<conio.h>
using namespace std;
int main()
{
	int n,i,j;
	do
	{
		cout << "Enter a number: ";
		cin >> n;
		if (n <= 0)
			cout << "Thank you!";
		else
		{
			j = 0;
			for (i = 1; i <= n;i++)
			{
				j = j + i;
			}
			cout << "The sum of all numbers from 1 to " << n << " is " << j << ".\n";
		}
	} while (n > 0);
	_getch();
	return 0;
}
