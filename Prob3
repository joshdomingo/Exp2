#include<iostream>
#include<conio.h>
#include<iomanip>
#include<cmath>
using namespace std;
int main()
{
	int x, y;
	float v, z;
	cout << "X value: ";
	cin >> x;
	cout << "Y value: ";
	cin >> y;
	z = 2.5;
	/*The value of V depends on the values of x and y as follows:
V= xyz when x = 1 and 1<y<5
V= x + y/z when x= 1 and y>=5
V= |(x â€“ y)/z| when x = 2 and y<=5
V= x-âˆšð‘¦ + ð‘§ when x = 2 and y>5
V = x +y + z for other values of x and y*/
	switch (x)
	{
	case 1:
		if (y > 1 && y < 5)
		{
			cout <<setw(10)<< setprecision(2) << fixed;
			cout << "V = " << x * y * z;
		}
		else if (y >= 5)
		{
			cout << setw(10) << setprecision(2) << fixed;
			cout << "V = " << x + (y / z);
		}
		else
		{
			cout << setw(10) << setprecision(2) << fixed;
			cout << "V = " << x + y + z;
		}
		break;
	case 2:
		if (y <= 5)
		{
			cout << setw(10) << setprecision(2) << fixed;
			cout << "V = " << abs((x - y) / z);
		}
		else
		{
			cout << setw(10) << setprecision(2) << fixed;
			cout << "V = " << x - sqrt(y + z);
		}
		break;
	default:
	{
		cout << setw(10) << setprecision(2) << fixed;
		cout << "V = " << x + y + z;
	}
	}
	_getch();
	return 0;
}
